int a = 2;
int b = 3;
int c = 4;
int d = 5;
int e = 6;
int f = 7;
int g = 8;
int h = 9;
int decimal = 10;

void setup()
{
  pinMode (a, OUTPUT);
  pinMode (b, OUTPUT);
  pinMode (c, OUTPUT);
  pinMode (d, OUTPUT);
  pinMode (e, OUTPUT);
  pinMode (f, OUTPUT);  
  pinMode (g, OUTPUT);
  pinMode (h, OUTPUT);
  pinMode (decimal, OUTPUT);
}
void loop()
{
  digitalWrite (a, HIGH);
  digitalWrite (b, HIGH);
  digitalWrite (c, LOW);
  digitalWrite (d, HIGH);
  digitalWrite (e, HIGH);
  digitalWrite (f, LOW);
  digitalWrite (g, HIGH);
  digitalWrite (h, HIGH);
  digitalWrite (decimal, LOW);

  delay(1000);

  digitalWrite (a, HIGH);
  digitalWrite (b, LOW);
  digitalWrite (c, LOW);
  digitalWrite (d, HIGH);
  digitalWrite (e, LOW);
  digitalWrite (f, LOW);
  digitalWrite (g, LOW);
  digitalWrite (h, LOW);
  digitalWrite (decimal, LOW);

  delay(1000);

 digitalWrite (a, HIGH);
