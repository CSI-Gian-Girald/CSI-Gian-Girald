  digitalWrite (e, LOW);
  digitalWrite (f, LOW);
  digitalWrite (g, LOW);
  digitalWrite (h, LOW);
  digitalWrite (decimal, LOW);

  delay(1000);

  digitalWrite (a, LOW);
 digitalWrite (b, LOW);
 digitalWrite (c, LOW);
 digitalWrite (d, HIGH);
 digitalWrite (e, LOW);
 digitalWrite (f, LOW);
 digitalWrite (g, LOW);
 digitalWrite (h, LOW);
 digitalWrite (decimal, HIGH);

 delay(1000);

 digitalWrite (a, HIGH);
 digitalWrite (b, HIGH);
 digitalWrite (c, HIGH);
 digitalWrite (d, HIGH);
 digitalWrite (e, LOW);
 digitalWrite (f, LOW);
 digitalWrite (g, HIGH);
 digitalWrite (h, LOW);
